<div class="brands-custom-container">
  {% for block in section.blocks %}
    <a
      href="{{ block.settings.link }}"
      class="brands-custom-box"
      style="background-color: {{ block.settings.background_color }};">
      {% if block.settings.image != blank %}
        <img
          src="{{ block.settings.image | image_url }}"
          alt="{{ block.settings.text }}"
          class="brands-custom-logo"
          width="100"
          height="100"
          loading="lazy">
      {% else %}
        {% if block.settings.default_svg == "green-logo" %}
          {% render 'green-logo' %}
        {% elsif block.settings.default_svg == "orange-logo" %}
          {% render 'orange-logo' %}
        {% endif %}
      {% endif %}
      <p class="brands-custom-text">{{ block.settings.text }}</p>
    </a>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Brands Custom",
    "blocks": [
      {
        "type": "brand",
        "name": "Brand Block",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "FÃ¼r mich"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Custom Image"
          },
          {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#CADFBE"
          }, {
            "type": "select",
            "id": "default_svg",
            "label": "Default SVG to Render",
            "options": [
              {
                "value": "green-logo",
                "label": "Green Logo"
              }, {
                "value": "orange-logo",
                "label": "Orange Logo"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brands Custom",
      }
    ]
  }
{% endschema %}