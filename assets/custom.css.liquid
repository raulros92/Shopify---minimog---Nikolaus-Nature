/* CUSTOM CSS - FYNEST */

/* Header */

.m-menu__arrow {
    transition: var(--m-duration-default, .25s) transform;
    display: none;
}

.m-menu__link--main:after {
  display: none;
}

.m-menu__link--main:hover {
  font-weight: 700;
}

header .m-mega-menu {
  border: 0.5px solid rgb(223, 238, 215);
  border-radius: 20px;
  backdrop-filter: blur(80px);
  background: rgba(255, 255, 255, 0.2);
}

.language-selector {
  display: flex;
  align-items: center;
  font-size: 1rem; 
}

.language-option {
  margin: 0 8px;
  cursor: pointer;
}

.language-option.selected-language {
  font-weight: bold;
}

@media screen and (min-width: 1440px) {
  header .m-header__left {
    margin-left: 2rem;
  }

  header .m-header__right {
    margin-right: 2rem;
  }

  header .m-menu__link {
    font-size: 18px;
  }

  .language-selector {
    font-size: 18px;
  }
}

/* Product tabs */

.m-tab-header {
  font-weight: 700;
  padding-bottom: 2px !important;
}

section .m-tab-header:after {
  background-color: #65B235;
  height: 4px;
  border-radius: 50px;
}

.m-product-card__media {
  background-color: #F4F5F3;
  border-radius: 50px;
}

.m-product-card__media:hover {
  background-color: #DFE8D9;
}

.m-product-card__name {
  font-weight: 700;
}

.m-product-card__price {
  font-weight: 700;
}

.ml_drops {
  font-size: 1rem;
  line-height: 20px;
}

.product-descripcion-custom {
  font-size: 1rem;
  padding-top: 1rem;
}

@media screen and (max-width: 779px) {
  .product-descripcion-custom {
    display: none;
  }
}


/* Image cards */

.m-hover-box:nth-child(4) {
  grid-column: 3 / 5;
}
