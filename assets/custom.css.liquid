/* CUSTOM CSS - FYNEST */

/* Header */

.m-menu__arrow {
    transition: var(--m-duration-default, .25s) transform;
    display: none;
}

.m-menu__link--main:after {
  display: none;
}

.m-menu__link--main:hover {
  font-weight: 700;
}

header .m-mega-menu {
  border: 0.5px solid rgb(223, 238, 215);
  border-radius: 20px;
  backdrop-filter: blur(15px);
  background: rgba(255, 255, 255, 0.2);
}

.language-selector {
  display: flex;
  align-items: center;
  font-size: 1rem; 
}

.language-option {
  margin: 0 8px;
  cursor: pointer;
}

.language-option.selected-language {
  font-weight: bold;
}

@media screen and (min-width: 1440px) {
  header .m-header__left {
    margin-left: 2rem;
  }

  header .m-header__right {
    margin-right: 2rem;
  }

  header .m-menu__link {
    font-size: 18px;
  }

  .language-selector {
    font-size: 18px;
  }
}

/* Slideshow */

.m-slide__description {
  font-size: 1.2rem;
}

.m-richtext__title {
  font-size: 40px;
}

.m-dot--active::after {
  background: #65B235;
}

.m-dot--active::before {
  background: #F39200;
}

.rte p {
  margin: 0;
}

@media screen and (min-width: 1900px) {
.m-slide__description {
  font-size: 1.5rem;
  }
}

@media screen and (min-width: 1280px) {
  .m-slide .m-slide__wrapper {
    display: flex;
    width: 40%;
    height: 90%;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 20;
    backdrop-filter: blur(15px);
    background: rgba(202, 223, 190, 0.43);
    border-radius: 45px;
    margin-top: 30px;
    margin-left: 30px;
    padding: 50px;
  }
}

@media screen and (max-width: 768px) {
  .m-richtext__description {
  font-size: 1rem;
  }
}



/* Brands custom */

  .brands-custom-container {
    display: flex;
    justify-content: space-between;
    gap: 14px;
  }

  .brands-custom-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 60px 0;
    border-radius: 50px;
    box-shadow: 3px 5px 10px 0px rgba(49,49,49,0.3);
    border: 0.6px solid rgb(255, 255, 255);
    background: rgb(202, 223, 190);
  }

  .brands-custom-text {
    font-size: 2rem;
    margin-left: 45px;
  }

   @media screen and (max-width: 768px) {

    .brands-custom-container {
      flex-direction: column;
      align-items: center;
      gap: 0;
    }

    .brands-custom-box {
      padding: 20px;
      margin: 10px;
    }

    .brands-custom-text {
      font-size: 1.2rem;
      margin-left: 15px;
    }

    .brands-custom-logo {
      max-height: 50px;
      max-width: 50px;
    }

    .brands-custom-box:nth-of-type(2) .brands-custom-logo {
      margin-left: 40px;
    }
  }

/* Product tabs */

.m-tab-header {
  font-weight: 700;
  padding-bottom: 2px !important;
}

section .m-tab-header:after {
  background-color: #65B235;
  height: 4px;
  border-radius: 50px;
}

.m-product-card__media {
  background-color: #F4F5F3;
  border-radius: 50px;
}

.m-product-card__media:hover {
  background-color: #DFE8D9;
}

.m-product-card__name {
  font-weight: 700;
}

.m-product-card__price {
  font-weight: 700;
}

.ml_drop {
  font-size: 1rem;
  line-height: 20px;
  color: #8A8A8A;
}


.product-description-custom {
  font-size: 1rem;
  padding-top: 1rem;
}

@media screen and (max-width: 1280px) {
  .ml_drop {
    font-size: 12px;
  }
  .product-description-custom {
    font-size: 12px;
  }
}

@media screen and (max-width: 768px) {
  .product-description-custom {
    display: none;
  }
}

/* Image cards */

.m-image-card__inner {
  border-radius: 50px;
  position: relative;
}

.m-image-card__img {
  border-radius: 50px;
}

.m-image-card__inner::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.1);
  pointer-events: none;
}

.m-hover-box:nth-child(4) {
  grid-column: 3 / 5;
}

@media screen and (max-width: 779px) {
  .m-image-card__inner::after {
    display: none;
  }

  .m-hover-box:nth-child(4) {
    grid-column: 3 / 4;
  }
  .m-richtext__subtitle {
    display: none;
  }
}

/* Collapsible tabs custom */

.collapsible-tabs-custom__wrapper {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  padding-left: 150px;
  padding-right: 150px;
}

.m-section-py-custom {
  padding-right: 150px;
}

.m-collapsible__content-area {
  padding-left: 150px;
}

.m-collapsible--button {
  padding: 32px 0 8px;
}

.m-collapsible--button > span {
  font-weight: 700;
}

.content-group {
  padding-bottom: 50px;
}

.content-group > h2 {
  padding-bottom: 16px;
  font-size: 40px;
}

.content-group > p {
  padding-bottom: 32px;
}

@media screen and (min-width: 1900px) {
  .m-section-py-custom {
    padding-right: 150px;
    margin-left: 60px;
  }
}



@media screen and (max-width: 1280px) {
  .collapsible-tabs-custom__wrapper {
  margin-left: 0;
  margin-right: 0;
  }
  .m-section-py-custom {
    padding-right: 50px;
  }

  .m-collapsible__content-area {
    padding-left: 50px;
  }
}

@media screen and (max-width: 768px) {
  .collapsible-tabs-custom__wrapper {
    grid-template-columns: repeat(1, 1fr);
    margin-left: 20px;
    margin-right: 20px;
    padding-left: 20px;
    padding-right: 20px;
    gap: 50px;
  }
  .m-section-py-custom {
    padding-right: 0;
  }

  .m-collapsible__content-area {
    padding-left: 0;
  }

  .content-group > h2 {
    text-align: center;
  }

  .button-custom {
    font-size: 14px;
    padding: 12px 24px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

/* Blog Posts */

.m-article-card__image {
  position: relative;
  overflow: hidden;
  border-radius: 50px;
}

.m-article-card__title {
  display: none;
}

.m-article-card__excerpt {
  font-weight: 700;
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  backdrop-filter: blur(15px);
  background: rgba(244, 245, 243, 0.4);
  padding: 20px 25px;
  border-radius: 57.5px;
  text-align: center;
  z-index: 2;
  width: 90%;
}

.m-button--link:before {
  border: 2px solid rgb(243, 146, 0);
}

.m-button--link:after {
  border: 2px solid rgb(243, 146, 0);
}

section .m-article-card__readmore {
  font-weight: 700;
}

.m-article-card__excerpt {
  line-height: 23px;
}

@media screen and (max-width: 1420px) {
  .m-article-card__excerpt {
    font-size: 12px;
  }
}

@media (max-width: 768px) {
  .m-article-card__excerpt {
    display: block;
    font-size: 1rem;
  }
}

/* Image with text custom */

.m-hero__inner[class*="--middle-"] {
    align-items: center;
    flex-direction: column;
    padding: 0;
}

.messages-container-custom {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5rem;
  gap: 3rem;
}

.message-custom {
  display: flex;
  color: rgb(49, 49, 49);
  font-size: 20px;
  font-weight: 700;
  line-height: 28px;
  letter-spacing: 0px;
  text-align: center;
  padding: 2rem 3rem;
  border-radius: 65.5px;
  backdrop-filter: blur(15px);
  background: rgba(244, 245, 243, 0.5);
}


@media (max-width: 768px) {

  .messages-container-custom {
    display: none;
  }
  .message-custom {
    display: none;
  }
}


/* Experten-Meinungen (custom content) */

.m-image-card__content-inner-custom {
  font-weight: 700;
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  backdrop-filter: blur(15px);
  background: rgba(244, 245, 243, 0.4);
  border-radius: 57.5px;
  padding: 20px 25px;
  text-align: center;
  z-index: 2;
  width: 90%;
}

.m-richtext__title.m-image-card__heading-custom {
  font-size: 1.2rem;
  font-weight: 700;
  color: #313131;
}

.m-image-card__subheading-custom {
  margin-top: 4px;
}

.m-richtext__description-custom {
  margin-top: 12px;
  text-align: center;
}

.link-image-card-custom {
  display: flex;
  justify-content: center;
  margin-top: 0.5rem;
}

@media screen and (max-width: 1919px) {
  .m-richtext__description-custom {
    font-size: 13px;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 16px;
  }
  .m-image-card__subheading-custom {
  font-size: 16px !important;
  }
}

@media screen and (max-width: 1281px) {
  .m-richtext__description-custom {
    font-size: 10px;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 12px;
  }
  .m-image-card__subheading-custom {
  font-size: 12px !important;
  }
}

@media (max-width: 768px) {
  .m-image-card__content {
    padding: 0 !important;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 1rem;
  }
  .m-image-card__subheading-custom {
    display: block;
    font-size: 1rem !important;
  }
  .m-richtext__description-custom {
    display: none;
  }
}

/* Testimonials */

.m-testimonials__inner .m-testimonial__wrapper {
  border-radius: 50px;
  box-shadow: 1px 3px 8px 0px rgba(72, 72, 72, 0.2);
  background: rgb(243, 239, 236);
  position: relative;
}

.m-testimonial__name {
  font-weight: 700 !important;
}

.m-testimonial__image {
  border-radius: 100%;
  width: 77px !important;
  height: 77px;
}

@media screen and (min-width: 1900px) {
.m-testimonials__inner .m-testimonial__wrapper {
  padding: 30px !important
  }
}

@media screen and (max-width: 768px) {
  .m-testimonial__name {
    text-align: center;
  }
  .m-stars {
    justify-content: center;
  }
}

/* Collection-page-header */

.blurred-container {
  max-width: 700px;
  backdrop-filter: blur(15px);
  background: rgba(243, 239, 236, 0.43);
  border-radius: 45px;
  margin: 20px;
}

.m-hero__title {
  font-weight: 700;
}

.m-collection-page-header__description {
  font-size: 1.5rem;
}

@media (max-width: 768px) {
.m-collection-page-header__description {
  font-size: 1rem;
  }
}


/* Icons Custom */

.m-brands-list__logo-custom {
  display: flex;
}

.m-brands-list__logo-custom img {
  border-radius: 13px;
  background: rgb(202, 223, 190);
}

.m-image-caption {
  text-align: center;
  color: #484848;
  font-weight: 700;
  margin-top: 0.5rem;
}

@media (max-width: 768px) {
  .m-brands-list__inner-custom-responsive {
    display: grid !important;
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Product page */

.product-block-group--title-custom {
  display: flex;
  flex-direction: column;
}

.m-price__regular {
  font-weight: 700;
}

.m-product-tax-custom {
  color: #8A8A8A;
}

.m-product-option--label {
  display: none;
}




