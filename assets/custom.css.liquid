/* CUSTOM CSS - FYNEST */

/* Header */

.m-menu__arrow {
    transition: var(--m-duration-default, .25s) transform;
    display: none;
}

.m-menu__link--main:after {
  display: none;
}

.m-menu__link--main:hover {
  font-weight: 700;
}

header .m-mega-menu {
  border: 0.5px solid rgb(223, 238, 215);
  border-radius: 20px;
  backdrop-filter: blur(80px);
  background: rgba(255, 255, 255, 0.2);
}

.language-selector {
  display: flex;
  align-items: center;
  font-size: 1rem; 
}

.language-option {
  margin: 0 8px;
  cursor: pointer;
}

.language-option.selected-language {
  font-weight: bold;
}

@media screen and (min-width: 1440px) {
  header .m-header__left {
    margin-left: 2rem;
  }

  header .m-header__right {
    margin-right: 2rem;
  }

  header .m-menu__link {
    font-size: 18px;
  }

  .language-selector {
    font-size: 18px;
  }
}

/* Product tabs */

.m-tab-header {
  font-weight: 700;
  padding-bottom: 2px !important;
}

section .m-tab-header:after {
  background-color: #65B235;
  height: 4px;
  border-radius: 50px;
}

.m-product-card__media {
  background-color: #F4F5F3;
  border-radius: 50px;
}

.m-product-card__media:hover {
  background-color: #DFE8D9;
}

.m-product-card__name {
  font-weight: 700;
}

.m-product-card__price {
  font-weight: 700;
}

.ml_drops {
  font-size: 1rem;
  line-height: 20px;
}

.product-description-custom {
  font-size: 1rem;
  padding-top: 1rem;
}

@media screen and (max-width: 768px) {
  .product-description-custom {
    display: none;
  }
}

/* Image cards */

.m-image-card__inner {
  border-radius: 50px;
  position: relative;
}

.m-image-card__img {
  border-radius: 50px;
}

.m-image-card__inner::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.1);
  pointer-events: none;
}

.m-image-card__inner:hover::after {
  background: rgba(0, 0, 0, 0);
}

.m-hover-box:nth-child(4) {
  grid-column: 3 / 5;
}

@media screen and (max-width: 779px) {
  .m-image-card__inner::after {
    display: none;
  }

  .m-hover-box:nth-child(4) {
    grid-column: 3 / 4;
  }
  .m-richtext__subtitle {
    display: none;
  }
}

/* Collapsible tabs custom */

.collapsible-tabs-custom__wrapper {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  padding-left: 150px;
  padding-right: 150px;
}

.m-section-py-custom {
  padding-right: 150px;
}

.m-collapsible__content-area {
  padding-left: 150px;
}

.m-collapsible--button {
  padding: 32px 0 8px;
}

.m-collapsible--button > span {
  font-weight: 700;
}

.content-group {
  padding-bottom: 50px;
}

.content-group > h2 {
  padding-bottom: 16px;
}

.content-group > p {
  padding-bottom: 32px;
}

@media screen and (max-width: 1280px) {
  .collapsible-tabs-custom__wrapper {
  margin-left: 0;
  margin-right: 0;
  }
  .m-section-py-custom {
    padding-right: 50px;
  }

  .m-collapsible__content-area {
    padding-left: 50px;
  }
}

@media screen and (max-width: 768px) {
  .collapsible-tabs-custom__wrapper {
    grid-template-columns: repeat(1, 1fr);
    margin-left: 20px;
    margin-right: 20px;
    padding-left: 20px;
    padding-right: 20px;
    gap: 50px;
  }
  .m-section-py-custom {
    padding-right: 0;
  }

  .m-collapsible__content-area {
    padding-left: 0;
  }

  .content-group > h2 {
    text-align: center;
  }

  .button-custom {
    font-size: 14px;
    padding: 12px 24px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

/* Blog Posts */

.m-article-card__image {
  position: relative;
  overflow: hidden;
  border-radius: 50px;
}

.m-article-card__title {
  display: none;
}

.m-article-card__excerpt {
  font-weight: 700;
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  backdrop-filter: blur(40px);
  background: rgba(244, 245, 243, 0.4);
  padding: 20px 25px;
  border-radius: 57.5px;
  text-align: center;
  z-index: 2;
  width: 90%;
}

section .m-article-card__readmore {
  font-weight: 700;
}

@media screen and (max-width: 1420px) {
  .m-article-card__excerpt {
    font-size: 12px;
  }
}

@media (max-width: 768px) {
  .m-article-card__excerpt {
    display: block;
    font-size: 1rem;
  }
}

/* Experten-Meinungen (custom content) */

.m-image-card__content-inner-custom {
  font-weight: 700;
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  backdrop-filter: blur(40px);
  background: rgba(244, 245, 243, 0.4);
  border-radius: 57.5px;
  padding: 20px 25px;
  text-align: center;
  z-index: 2;
  width: 90%;
}

.m-richtext__title.m-image-card__heading-custom {
  font-size: 1.2rem;
  font-weight: 700;
  color: #313131;
}

.m-image-card__subheading-custom {
  margin-top: 4px;
}

.m-richtext__description-custom {
  margin-top: 20px;
  text-align: center;
}

@media screen and (max-width: 1919px) {
  .m-richtext__description-custom {
    font-size: 13px;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 16px;
  }
  .m-image-card__subheading-custom {
  font-size: 16px !important;
  }
}

@media screen and (max-width: 1281px) {
  .m-richtext__description-custom {
    font-size: 10px;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 12px;
  }
  .m-image-card__subheading-custom {
  font-size: 12px !important;
  }
}

@media (max-width: 768px) {
  .m-image-card__content-inner-custom {
    bottom: 10%;
  }
  .m-richtext__title.m-image-card__heading-custom {
    font-size: 1rem;
  }
  .m-image-card__subheading-custom {
    display: block;
    font-size: 1rem !important;
  }
  .m-richtext__description-custom {
    display: none;
  }
}


